@model NewsPortal.Models.ViewModels.AddCategoryViewModel

@{
    ViewBag.Title = "Add new category";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<script src="lib/jquery-validation/dist/jquery.validate.js"></script>

<hr/>

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        
        <div class="form-group">
            <label asp-for="Name" class="control-label col-md-2">Category name</label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="validation-summary-errors text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label  asp-for="Description" class="control-label col-md-2">Category description</label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="col-md-offset-2">
        <input type="submit" class="btn btn-primary" value="Save"/>
    </div>

</form>

<a asp-action="Index" class="btn btn-danger">Return</a>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}