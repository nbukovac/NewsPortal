@model List<Category>

@{
    ViewBag.Title = "Categories";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<div class="pull-right">
    <a asp-action="Create" class="btn btn-sm btn-primary">
        Create a new category
        <span class="glyphicon glyphicon-plus"></span>
    </a>
</div>
<br/>

<hr/>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-offset-1 col-md-11 panel panel-success">
            <div class="panel-heading">
                <div class="pull-right">
                    <a asp-action="Edit" asp-route-categoryId="@item.CategoryId" class="btn btn-sm btn-info">
                        Edit
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a asp-action="Delete" onclick="return confirm('Are you sure you want to delete this category?')"
                       asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger">
                        Delete
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </div>

                <p>@item.Name</p>
            </div>

            <div class="panel-body">
                
            </div>

        </div>
    }
</div>
