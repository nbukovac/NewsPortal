@model List<Category>
@{
    ViewData["Title"] = "Home Page";
}

@if (User.IsInRole(Constants.AdministratorRole))
{
    <div class="pull-right">
        <a asp-action="Create" asp-controller="Category" class="btn btn-sm btn-primary">
            Create a new category
            <span class="glyphicon glyphicon-plus"></span>
        </a>
    </div>

    <br />
}

<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-offset-1 col-md-11 panel panel-primary">
            <div class="panel-heading">
                @if (User.IsInRole(Constants.AdministratorRole))
                {
                    <div class="pull-right">
                        <a asp-action="Edit" asp-controller="Category" asp-route-categoryId="@item.CategoryId" class="btn btn-sm btn-info">
                            Edit
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a asp-action="Delete" asp-controller="Category" onclick="return confirm('Are you sure you want to delete this category')"
                           asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger" id="delete">
                            Delete
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </div>
                }

                <h3>
                    <a asp-action="CategoryArticles" asp-controller="Category" asp-route-categoryId="@item.CategoryId">@item.Name</a>
                </h3>
            </div>

            <div class="panel-body">

            </div>

        </div>
    }
</div>
