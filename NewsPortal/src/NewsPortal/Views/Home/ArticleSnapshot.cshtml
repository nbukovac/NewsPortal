@model Article

<div class="panel panel-default">
    <div class="panel-heading">
        <a asp-controller="Articles" asp-action="ReadArticle" asp-route-articleId="@Model.ArticleId" class="btn btn-link">
            <h3>@Model.Title</h3>
        </a>
    </div>
    <div class="panel-body">
        @Model.Summary
    </div>
    <div class="panel-footer">Comments: @Model.Comments.Count | Votes: @Model.Votes</div>
</div>