@model NewsPortal.Models.ViewModels.AddArticleViewModel

@{
    ViewBag.Title = "New article";
    Layout = "_Layout";

    var autorId = ViewBag.AutorId;
}

<h2>@ViewBag.Title</h2>

<hr/>

<form asp-action="WriteArticle" method="post">
    <div class="form-horizontal">

        <div class="form-group">
            <label asp-for="Title" class="control-label col-md-2">Title</label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Summary" class="control-label col-md-2">Short summary</label>
            <div class="col-md-10">
                <textarea asp-for="Summary" class="form-control" rows="3"></textarea>  
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Text" class="control-label col-md-2">Text</label>
            <div class="col-md-10">
                <textarea class="form-control" rows="10" asp-for="Text"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label col-md-2">Category</label>
            <div class="col-md-10">
                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        
        <input class="hidden" asp-for="UserId" value="@autorId"/>
    </div>

    <div class="col-md-offset-2">
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>

</form>

<a asp-action="Index" asp-controller="Category" class="btn btn-danger">Return</a>